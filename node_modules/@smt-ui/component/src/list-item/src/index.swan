<view class="list-item-container smt-border-bottom-retain-inner {{disable ? 'smt-hover-class' : ''}} {{isIos ? '' : 'android'}}">
    <view class="single-box" s-if="{{type === 'single'}}">
        <view class="label smt-label">{{label}}</view>
        <view class="content smt-content">{{content}}</view>
        <view class="smt-flex-center-box" s-if="disable">
            <smt-icon name="arrow-right-o" color="#ccc"></smt-icon>
        </view>
    </view>
    <view class="list" s-if="{{type === 'list' && list.length}}">
        <view class="list-title">{{title}}}</view>
        <view class="list-box">
            <view class="smt-flex-box list-item" s-for="{{list}}">
                <view class="label smt-list-label">{{item[listLabelName]}}</view>
                <view class="content smt-list-content">{{item[listContentName]}}</view>
            </view>
        </view>
    </view>
    <view class="multiple-box smt-flex-box" s-if="{{type === 'multiple' && list.length}}">
        <view class="multiple" s-for="{{list}}">
            <view class="label smt-line-clamp-1">{{item[listLabelName]}}</view>
            <view class="content smt-line-clamp-1">{{item[listContentName]}}</view>
        </view>
    </view>
</view>